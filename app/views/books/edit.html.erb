<h1>Editing Book</h1>

<% if @book.errors.any? %>
<%= @book.errors.count %> 件のエラーが発生しました
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%=  message %></li>
  <% end %>
</ul>
<% end %>

<% if flash[:notice] %>
<div class="flash">
  <%= flash[:notice] %>
</div>
<% end %>

<%= form_with model:@book, url:update_book_path(@book.id),method: :patch,local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>

<%= link_to 'Show',update_book_path(@book.id) %>
|
<%= link_to 'Back','https://0a7f4b2788c746bea3bde8581f6e102d.vfs.cloud9.us-east-1.amazonaws.com/books' %>

<% end %>